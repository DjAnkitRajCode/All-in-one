<%- include('../partials/header') %>


    <div class="container">
        <header class="jumbotron mt-4">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View our hand picked campgrounds from all over the worlds</p>
                <p>
                    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a>
                </p>
            </div>
        </header>
        <div class="row text-center" >
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card mb-3 shadow">
                     <img class="card-img-top img-thumbnail rounded-0" id="image" src="<%= campground.image %>">
                     <div class="card-body">
                         <h4><%= campground.name %></h4>
                     </div>
                     <p>
                         <a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-primary">More Info</a>
                     </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
<%- include('../partials/footer') %>
