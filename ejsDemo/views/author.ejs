<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/index.css">
    <title>Document</title>
</head>
<body>
    <p>=======================================================================</p>
    <h1>for Loop</h1>
    <p>=======================================================================</p>
    <p>Best Book For MATH with auhor</p>
    <% for(var i = 0; i<author.length; i++){ %>
        <li><%= author[i].title %> -- <%= author[i].author %> </li> 
    <% } %>
    <p>=======================================================================</p>
    <h1>forEach Loop</h1>
    <p>=======================================================================</p>
    <% author.forEach(function(post){ %>
        <li>
            <%= post.title %> -- <strong><%= post.author %></strong>
        </li>
    <% }); %>
</body>
</html>