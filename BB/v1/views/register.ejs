<%- include ('partials/header') %>
<div id="signUp">
    <div class="container">
        <div class="formBox mt-5">
            <form action="/register" method="POST" onsubmit="checkPassword()" role="form" enctype="multipart/form-data">
                <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control mb-3" name="username" placeholder="Name">
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control mb-3" name="nickname" placeholder="Nick Name">
                </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="email" class="form-control mb-3" name="email" placeholder="Personal Email">
                    </div>
                    <div class="col-md-6">
                        <input type="email" class="form-control mb-3" name="kiitmail" placeholder="KIIT Email">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" class="form-control mb-3" name="phoneno" placeholder="Personal Contact Number">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control mb-3" name="whatsapp" placeholder="Whatsapp Number">
                    </div>
                </div>
                    <input type="password" class="form-control mb-3" name="password" id="pass" placeholder="Password">
                    <input type="password" class="form-control mb-3" id="cpass" placeholder="Confirm-Password">
                    <input type="file" class="border mb-3 w-100 bg-light" name="file">
                <div class="input-group mb-3">
                    <input type="date" class="form-control" name="dob">
                </div>
                <div class="text-center">
                <input type="submit" class="btn btn-lg text-light btn-info">
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/index.js"></script>
<%- include ('partials/footer') %>