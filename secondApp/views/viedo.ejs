<%- include ('partials/header') %>
<div class="container-fluid">
    <div class="jumbotron">
        <div class="btn btn-sm btn-success">Watch Now!</div>
    </div>
    <div class="container">
        <div class="row">
            <% for(var i=1;i<=100;i++){ %>
            <div class="col-3">
                <video height="169" width="100%" preload="none" controls="controls">
                    <source src="../viedos/<%= i%>.mp4" type="video/mp4">
                </video>
            </div>
            <% } %>
        </div>
    </div>
</div>
<script>
    var videos = document.querySelectorAll('video');
        for(var i=0; i<videos.length; i++)
            videos[i].addEventListener('play',function(){pauseAll(this)},true);
        function pauseAll(elem){
            for(var i=0; i<videos.length; i++){
            if(videos[i] == elem)continue;
            if(videos[i].played.length > 0 && !videos[i].paused){
                videos[i].pause();
                }
            }
        }
</script>
