<%- include ('partials/header') %>
<div class="container-fluid float-left bg-light">
    <h1 class="text-light">Add your Story</h1>
    <form action="/badmassamerica/story" method="POST">
        <div class="form-group">
            <label class="font-weight-bold float-left mr-2 h4">TITLE </label>
            <input type="text" name="story[title]" placeholder="Enter your Story Title" class="form-control w-50">
        </div>
        <div class="form-group">
