            <label class="mr-2 h5 mt-1">Paragraph 1:</label>
            <textarea name="story[para1]" rows="10" maxlength="750" minlength="700" placeholder="Enter your story's first paragraph here" class="form-control"></textarea>
            <label class="font-weight-normal mr-2 h4">Paragraph Image:1</label>
            <input type="text" name="story[image1]" placeholder="Image-URL" class="form-control w-100">  
        </div>
